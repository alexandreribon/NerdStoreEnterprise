@{
    ViewData["Title"] = "Home Page";
}

<section>
    <div class="container" >
        <div class="row">
            <div class="col-sm-3" id="menuCategoria">
            </div>
            <div class="col-sm-9">
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function(){
            $(window).on("load", function() {
                var loadMenuCat = sessionStorage.getItem('loadMenuCat')
                if(loadMenuCat !== 'sim') 
                {
                    $('#menuCategoria').load("/Home/MenuCategoria");
                    sessionStorage.setItem('loadMenuCat', 'sim');
                }
            });
        });
    </script>
}
